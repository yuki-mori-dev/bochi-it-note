---
import BaseLayout from "../../layouts/BaseLayout.astro";
import templates from "../../../data/templates.json";
function withUtm(u){ try{ const url=new URL(u); url.searchParams.set('utm_source','bochi-it-note'); url.searchParams.set('utm_medium','templates-index'); url.searchParams.set('utm_campaign','templates'); return url.toString(); }catch(e){ return u; } }
const title = 'テンプレート販売｜Bochi IT Note';
const description = '稟議・RFP・セキュリティチェック・SLA/BCPの和文テンプレート';
---

<BaseLayout {title} {description}>
	<script type="application/ld+json" is:inline>{JSON.stringify({
		"@context":"https://schema.org",
		"@type":"CollectionPage",
		"name":"テンプレート一覧",
		"url":"https://bochi-it-note.com/templates/"
	})}</script>
	<h1 class="text-2xl font-bold">テンプレート</h1>
	<ul class="mt-6 grid gap-4 sm:grid-cols-2">
		{templates.map(t => (
			<li class="rounded-md border p-4">
				<h2 class="font-semibold"><a href={`/templates/${t.slug}`} class="hover:underline">{t.title}</a></h2>
				<p class="mt-1 text-sm text-gray-600">{t.description}</p>
				<p class="mt-2 text-sm text-gray-800">¥{t.priceJPY.toLocaleString()}・{t.platform}</p>
				<div class="mt-3 flex flex-wrap gap-2">
					<a href={`/templates/${t.slug}`} class="rounded-md border border-gray-300 px-3 py-2 text-sm text-gray-800 hover:bg-gray-50">詳細</a>
					<a data-track="out_template" data-type="template" data-id={t.slug} href={withUtm(t.url)} target="_blank" rel="nofollow noopener sponsored" class="inline-block rounded-md bg-gray-900 px-3 py-2 text-white hover:bg-black">購入ページへ</a>
				</div>
			</li>
		))}
	</ul>
</BaseLayout>


