---
import BaseLayout from "../../layouts/BaseLayout.astro";
import templates from "../../../data/templates.json";
const title = 'テンプレート販売｜Bochi IT Note';
const description = '稟議・RFP・セキュリティチェック・SLA/BCPの和文テンプレート';
---

<BaseLayout {title} {description}>
	<h1 class="text-2xl font-bold">テンプレート</h1>
	<ul class="mt-6 grid gap-4 sm:grid-cols-2">
		{templates.map(t => (
			<li class="rounded-md border p-4">
				<h2 class="font-semibold">{t.title}</h2>
				<p class="mt-1 text-sm text-gray-600">{t.description}</p>
				<p class="mt-2 text-sm text-gray-800">¥{t.priceJPY.toLocaleString()}・{t.platform}</p>
				<a data-track="out_template" data-type="template" data-id={t.slug} href={t.url} target="_blank" rel="nofollow noopener" class="mt-3 inline-block rounded-md bg-gray-900 px-3 py-2 text-white hover:bg-black">購入ページへ</a>
			</li>
		))}
	</ul>
</BaseLayout>


